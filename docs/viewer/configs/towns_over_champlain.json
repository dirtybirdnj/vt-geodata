{
  "id": "towns_over_champlain",
  "version": "1.0",
  "title": "ðŸ”¬ Third Order: Towns Over Champlain Waters",
  "description": "Mashup visualization to identify data gaps - VT Towns overlaid on Lake Champlain water features",

  "map": {
    "center": [44.4, -73.3],
    "zoom": 9,
    "tiles": "OpenStreetMap"
  },

  "ui": {
    "colorScheme": "#ff6b6b",
    "infoBox": {
      "width": "520px",
      "content": {
        "subtitle": "<b>Mashup visualization to identify data gaps</b><br>VT Towns overlaid on Lake Champlain water features<br><b style=\"color: #c92a2a;\">â˜… Grand Isle County (Champlain Islands) shown in RED</b><br>Notice: Island land areas appear small relative to surrounding water",
        "footer": "Third Order Transformation: Combining processed data sources"
      }
    }
  },

  "layers": [
    {
      "id": "vt_water",
      "name": "VT - Lake Champlain Main Body",
      "source": "../json/lake_champlain_water.json",
      "zIndex": 1,
      "style": {
        "type": "static",
        "fillColor": "#0d47a1",
        "color": "#01579b",
        "weight": 1,
        "fillOpacity": 0.6
      }
    },
    {
      "id": "ny_water",
      "name": "NY - Lake Champlain",
      "source": "../json/ny_lake_champlain_water.json",
      "zIndex": 2,
      "style": {
        "type": "static",
        "fillColor": "#5c6bc0",
        "color": "#3949ab",
        "weight": 1,
        "fillOpacity": 0.6
      }
    },
    {
      "id": "towns",
      "name": "VT Towns (Grand Isle highlighted)",
      "source": "../json/vt_towns.json",
      "zIndex": 3,
      "style": {
        "type": "function",
        "property": "county_name",
        "specialRules": {
          "property": "county_name",
          "value": "Grand Isle",
          "style": {
            "fillColor": "#ff6b6b",
            "color": "#c92a2a",
            "weight": 3,
            "fillOpacity": 0.7
          }
        },
        "colorMap": {
          "Addison": "#66bb6a",
          "Bennington": "#42a5f5",
          "Caledonia": "#ab47bc",
          "Chittenden": "#ef5350",
          "Essex": "#ffa726",
          "Franklin": "#26c6da",
          "Lamoille": "#ec407a",
          "Orange": "#5c6bc0",
          "Orleans": "#9ccc65",
          "Rutland": "#29b6f6",
          "Washington": "#ff7043",
          "Windham": "#26a69a",
          "Windsor": "#ffd54f"
        },
        "defaultColor": "#cccccc",
        "borderColor": "#000000",
        "weight": 2,
        "fillOpacity": 0.4
      },
      "tooltip": {
        "fields": ["NAME", "county_name"],
        "aliases": ["Town:", "County:"]
      }
    }
  ],

  "features": {
    "clickToSelect": {
      "enabled": false
    },
    "jsonDisplay": {
      "enabled": false
    },
    "layerControl": {
      "enabled": false
    }
  },

  "metadata": {
    "transformationOrder": "third",
    "dataSources": [
      "Vermont Open Geodata Portal - Lake Champlain",
      "Vermont Open Geodata Portal - Town Boundaries"
    ],
    "tags": ["towns", "water", "champlain", "mashup", "grand-isle", "third-order"]
  }
}
