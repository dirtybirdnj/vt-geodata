{
  "id": "vt_towns_vector",
  "version": "1.0",
  "title": "Vermont Towns - Vector Data Only",
  "description": "No base map - pure vector data visualization",

  "map": {
    "center": [44.0, -72.7],
    "zoom": 8,
    "tiles": null
  },

  "ui": {
    "colorScheme": "#2c5f2d",
    "infoBox": {
      "width": "400px",
      "content": {
        "subtitle": "No base map - pure vector data visualization",
        "stats": [
          { "label": "Total Towns", "value": "256" },
          { "label": "Counties", "value": "14" }
        ],
        "footer": "Click any town to view data"
      }
    }
  },

  "layers": [
    {
      "id": "towns",
      "name": "Vermont Towns",
      "source": "../json/vt_towns.json",
      "zIndex": 1,
      "style": {
        "type": "colorMap",
        "property": "county_name",
        "colorMap": {
          "Addison": "#66bb6a",
          "Bennington": "#42a5f5",
          "Caledonia": "#ab47bc",
          "Chittenden": "#ef5350",
          "Essex": "#ffa726",
          "Franklin": "#26c6da",
          "Grand Isle": "#7e57c2",
          "Lamoille": "#ec407a",
          "Orange": "#5c6bc0",
          "Orleans": "#9ccc65",
          "Rutland": "#29b6f6",
          "Washington": "#ff7043",
          "Windham": "#26a69a",
          "Windsor": "#ffd54f"
        },
        "defaultColor": "#cccccc",
        "color": "#000000",
        "weight": 1.5,
        "fillOpacity": 0.6
      },
      "tooltip": {
        "fields": ["NAME", "county_name", "GEOID", "area_sqkm"],
        "aliases": ["Town:", "County:", "GEOID:", "Area (sq km):"]
      }
    }
  ],

  "features": {
    "clickToSelect": {
      "enabled": true,
      "multiSelect": true,
      "highlightColor": "#ff1493",
      "highlightOpacity": 0.8,
      "highlightBorderColor": "#c90076",
      "highlightBorderWeight": 2,
      "outputFields": ["GEOID", "NAME"]
    },
    "jsonDisplay": {
      "enabled": true,
      "position": "bottom-right",
      "width": "400px",
      "maxHeight": "400px",
      "title": "Selected Towns",
      "instructions": "Click towns to select. Click again to deselect. Format: \"GEOID\": \"NAME\"",
      "format": "object"
    },
    "layerControl": {
      "enabled": false
    }
  },

  "metadata": {
    "transformationOrder": "first",
    "dataSources": [
      "Vermont Open Geodata Portal - Town Boundaries"
    ],
    "tags": ["towns", "vermont", "vector", "interactive", "colored"]
  }
}
