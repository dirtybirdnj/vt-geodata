{
  "id": "vt_roads_vector",
  "version": "1.0",
  "title": "Vermont Roads - Vector Data Only",
  "description": "Primary and secondary roads - no base map",

  "map": {
    "center": [44.0, -72.7],
    "zoom": 8,
    "tiles": "none"
  },

  "ui": {
    "colorScheme": "#e65100",
    "infoBox": {
      "width": "380px",
      "content": {
        "subtitle": "Pure vector visualization of VT road network",
        "stats": [
          { "label": "Interstate (red)", "value": "36 segments" },
          { "label": "State Highway (orange)", "value": "1,396 segments" }
        ],
        "footer": "Data: US Census TIGER/Line 2023"
      }
    }
  },

  "layers": [
    {
      "id": "highways",
      "name": "State Highways",
      "source": "../json/vt_highways.json",
      "zIndex": 1,
      "style": {
        "type": "static",
        "color": "#ff9800",
        "weight": 2,
        "opacity": 0.9
      }
    },
    {
      "id": "interstate",
      "name": "Interstate Highways",
      "source": "../json/vt_interstate.json",
      "zIndex": 2,
      "style": {
        "type": "static",
        "color": "#d32f2f",
        "weight": 4,
        "opacity": 1
      }
    }
  ],

  "features": {
    "clickToSelect": { "enabled": false },
    "jsonDisplay": { "enabled": false },
    "layerControl": { "enabled": true, "position": "topright" }
  },

  "metadata": {
    "dataSources": ["US Census TIGER/Line Primary & Secondary Roads 2023"],
    "tags": ["roads", "vector", "highways", "interstate"]
  }
}
