{
  "id": "vermont_with_islands",
  "version": "1.0",
  "title": "üó∫Ô∏è Lake Champlain Region",
  "description": "VT mainland, NY counties, and all Lake Champlain islands",

  "map": {
    "center": [44.5588, -72.5778],
    "zoom": 8,
    "tiles": null
  },

  "ui": {
    "colorScheme": "#2c5f2d",
    "infoBox": {
      "width": "400px",
      "content": {
        "subtitle": "<strong>Vermont & New York</strong><br>Shows VT mainland, NY counties, and all Lake Champlain islands",
        "footer": "<em>Islands appear as gaps in the lake</em>"
      }
    }
  },

  "layers": [
    {
      "id": "vt_boundary",
      "name": "Vermont",
      "source": "../json/vermont_boundary_detailed.json",
      "zIndex": 1,
      "style": {
        "type": "static",
        "fillColor": "#2c5f2d",
        "color": "#1e4320",
        "weight": 3,
        "fillOpacity": 0.3
      }
    },
    {
      "id": "ny_counties",
      "name": "New York",
      "source": "../json/ny_champlain_counties.json",
      "zIndex": 2,
      "style": {
        "type": "static",
        "fillColor": "#9e9e9e",
        "color": "#616161",
        "weight": 2,
        "fillOpacity": 0.2
      },
      "tooltip": {
        "fields": ["NAME"],
        "aliases": ["County:"]
      }
    },
    {
      "id": "lake_champlain_vt",
      "name": "Lake Champlain (VT)",
      "source": "../json/lake_champlain_water.json",
      "zIndex": 3,
      "style": {
        "type": "static",
        "fillColor": "#0d47a1",
        "color": "#01579b",
        "weight": 2,
        "fillOpacity": 0.6
      },
      "tooltip": {
        "fields": ["FULLNAME", "HYDROID", "area_sqkm"],
        "aliases": ["Name:", "Hydro ID:", "Area (sq km):"]
      }
    },
    {
      "id": "lake_champlain_ny",
      "name": "Lake Champlain (NY)",
      "source": "../json/ny_lake_champlain_water.json",
      "zIndex": 4,
      "style": {
        "type": "static",
        "fillColor": "#0d47a1",
        "color": "#01579b",
        "weight": 2,
        "fillOpacity": 0.6
      },
      "tooltip": {
        "fields": ["FULLNAME", "HYDROID", "area_sqkm"],
        "aliases": ["Name:", "Hydro ID:", "Area (sq km):"]
      }
    }
  ],

  "features": {
    "clickToSelect": {
      "enabled": false
    },
    "jsonDisplay": {
      "enabled": false
    },
    "layerControl": {
      "enabled": false
    }
  },

  "metadata": {
    "dataSources": [
      "Vermont Open Geodata Portal",
      "US Census TIGER/Line 2022"
    ],
    "tags": ["vermont", "newyork", "champlain", "islands", "region", "vector"]
  }
